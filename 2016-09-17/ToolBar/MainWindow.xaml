<Window x:Class="ToolBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolBar"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="文件"></MenuItem>
                <MenuItem Header="打开"></MenuItem>
            </Menu>
            <ToolBar DockPanel.Dock="Top" Height="30">
                <Button x:Name="btnNew">
                    <Image Source="1.jpg"></Image>
                </Button>
                <Button>
                    <Button.Content>
                        <Image Source="1.jpg"></Image>
                    </Button.Content>
                </Button>
                <CheckBox Content="自动保存"></CheckBox>
                <Button x:Name="btnAbout" Content="关于" Click="btnAbout_Click_1"></Button>
                <TextBox></TextBox>
            </ToolBar>
            <TextBox Name="txtName" DockPanel.Dock="Bottom"></TextBox>
        </DockPanel>
    </Grid>
</Window>
