        <Button x:Name="button" Content="删除" HorizontalAlignment="Left" Margin="71,34,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" IsCancel="True" Foreground="#FFEC0C0C" FontWeight="Bold" FontStyle="Italic"/>
