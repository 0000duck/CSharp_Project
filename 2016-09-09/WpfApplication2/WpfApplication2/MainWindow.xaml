        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="208,51,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtboxName" HorizontalAlignment="Left" Height="23" Margin="208,154,0,0" TextWrapping="Wrap" Text="哈哈" VerticalAlignment="Top" Width="120" SpellCheck.IsEnabled="True" />
        <TextBlock x:Name="txtB1" HorizontalAlignment="Left" Margin="386,54,0,0" TextWrapping="Wrap" Text="我的TB" VerticalAlignment="Top" MouseEnter="txtB1_MouseEnter"/>
        <TextBlock x:Name="txtB2" HorizontalAlignment="Left" Margin="386,102,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="-0.182,-0.333"/>
